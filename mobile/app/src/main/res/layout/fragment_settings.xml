<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_request_delay"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

        <TextView
            android:id="@+id/tvRequestDelayValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall" />

        <SeekBar
            android:id="@+id/seekRequestDelay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1900" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/setting_timeout"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

        <TextView
            android:id="@+id/tvTimeoutValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall" />

        <SeekBar
            android:id="@+id/seekTimeout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="50" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/setting_combined_battles_page_size"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

        <EditText
            android:id="@+id/etCombinedBattlesPageSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/setting_players_count"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

        <EditText
            android:id="@+id/etPlayersCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/setting_initial_player"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

        <EditText
            android:id="@+id/etInitialPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/setting_save_frequency"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

        <RadioGroup
            android:id="@+id/rgSaveFrequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbSave5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />

            <RadioButton
                android:id="@+id/rbSave10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10" />

            <RadioButton
                android:id="@+id/rbSave20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20" />
        </RadioGroup>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swAutoExport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/setting_auto_export" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swNotifComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_notif_complete" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swNotifError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_notif_error" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swNotifPhase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting_notif_phase" />

    </LinearLayout>
</ScrollView>
